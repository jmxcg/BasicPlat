<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="Plat_User" >
  <resultMap id="platUserResultMap" type="PlatUser" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="login_name" property="loginName" jdbcType="VARCHAR" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
  </resultMap>
  <select id="selectPlatUserByLoginName" resultMap="platUserResultMap" parameterType="java.lang.String" >
    select * from plat_user where login_name = #{loginName,jdbcType=VARCHAR}
  </select>
 </mapper>